<div class="author">
   <h1 class="author__heading">Hi I am Echo</h1>
   <div class="author__body">Web developer</div>
</div>

<img src="/img/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="articles">
   <h2 class="articles__heading">Latest Posts</h2>

   <ul class="article-ul">
      <% posts.forEach(post => { %>
       
         <li>
            <a href="/post/<%- post._id %>">
               <span><%= post.title %></span>
               <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
         </li>
      <% }) %>
   </ul>

   <% if (nxtPage !== null) { %>
      <a href="/?page=<%= nxtPage %>" class="pagenation">&lt; View Older Post</a>
   <% } %>


</section>